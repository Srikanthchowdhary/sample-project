# ======================== Elasticsearch Configuration =========================
#
# NOTE: Elasticsearch comes with reasonable defaults for most settings.
#       Before you set out to tweak and tune the configuration, make sure you
#       understand what are you trying to accomplish and the consequences.
#
# The primary way of configuring a node is via this file. This template lists
# the most important settings you may want to configure for a production cluster.
#
# Please consult the documentation for further information on configuration options:
# https://www.elastic.co/guide/en/elasticsearch/reference/index.html
#
# ---------------------------------- Cluster -----------------------------------
#
# Use a descriptive name for your cluster:
#
cluster.name: {{  hostvars[groups['elk'][0]]['es_cluster'] }}
#
# ------------------------------------ Node ------------------------------------
#
# Use a descriptive name for the node:
#
#node.name: node-1
#
# Add custom attributes to the node:
#
#node.attr.rack: r1
#
# ----------------------------------- Memory -----------------------------------
#
# Lock the memory on startup:
#
bootstrap.memory_lock: true
#
# Make sure that the heap size is set to about half the memory available
# on the system and that the owner of the process is allowed to use this
# limit.
#
# Elasticsearch performs poorly when the system is swapping the memory.
#
# ---------------------------------- Network -----------------------------------
#
# Set the bind address to a specific IP (IPv4 or IPv6):
#
network.host: 0.0.0.0
#
# Set a custom port for HTTP:
#
http.port: {{ hostvars[groups['elk'][0]]['es_port'] }}
#
# For more information, consult the network module documentation.
#
path.data: /var/lib/elasticsearch
#
# Path to log files:
#
path.logs: /var/log/elasticsearch

# --------------------------------- X-Pack -------------------------------------
#
# By default all x-pack features are enabled.
# xpack.graph.enabled: false
xpack.ml.enabled: false
# xpack.monitoring.enabled: false
# xpack.reporting.enabled: false
xpack.watcher.enabled: false
xpack.security.enabled: {{ hostvars[groups['elk'][0]]['xpack_enable']}}
xpack.security.transport.ssl.enabled: {{ hostvars[groups['elk'][0]]['xpack_enable']}}
xpack.security.transport.ssl.verification_mode: certificate
xpack.security.transport.ssl.keystore.path: certs/elastic-certificates.p12
xpack.security.transport.ssl.truststore.path: certs/elastic-certificates.p12

#xpack.security.http.ssl.enabled: {{ hostvars[groups['elk'][0]]['xpack_enable']}}
#xpack.security.http.ssl.keystore.path: certs/elastic-certificates.p12
#xpack.security.http.ssl.truststore.path: certs/elastic-certificates.p12
#xpack.security.http.ssl.client_authentication: optional

thread_pool.search.queue_size: 7000

discovery.type: zen
discovery.zen.hosts_provider: file
discovery.zen.minimum_master_nodes: 2
discovery.zen.ping_timeout: 30s
discovery.zen.join_timeout: 90s
# -------------------------------------------------------------------------------


xpack:
  security:
    authc:
      realms:
        native1:
          type: native
          order: 10
        file1:
          type: file
          order: 0
        ldap1:
          type: ldap
          order: 20
          url: ["ldaps://directory.cwds.io"]
          ssl:
            verification_mode: none
            certificate_authorities: [ "x-pack/cacert.pem" ]
          bind_dn: "{{ hostvars[groups['ldap'][0]]['ldap_bind_dn']}}"
          bind_password: {{ hostvars[groups['credentials'][0]]['ldap_bind_password']}}
          user_search:
            base_dn: {{ hostvars[groups['ldap'][0]]['ldap_user_base_dn']}}
            attribute: uid
          group_search:
            base_dn: {{ hostvars[groups['ldap'][0]]['ldap_group_base_dn']}}
          files:
            role_mapping: "role_mapping.yml"
          unmapped_groups_as_roles: true
